<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="detailsLabel">
     <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/details_subtitle_text_size</item>
        <item name="android:paddingBottom">@dimen/details_tv_label_bottom_padding</item>
    </style>

    <style name="fontValue">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

</resources>
